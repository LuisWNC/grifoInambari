<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="pe.com.grifoInambari.core.domain.Customer" table="customer">
		<id name="id" type="java.lang.Long">
			<column name="id" />
			<generator class="identity" />
		</id>
		<property name="createdBy" type="string">
			<column name="createdBy" length="25" />
		</property>
		<property name="dateCreated" type="timestamp">
			<column name="dateCreated"  />
		</property>
		<property name="dateLastUpdated" type="timestamp">
			<column name="dateLastUpdated"  />
		</property>
		<property name="lastUpdatedBy" type="string">
			<column name="lastUpdatedBy" length="20" />
		</property>
		<property name="version" type="java.lang.Long">
			<column name="version"></column>
		</property>
		
		

	</class>
</hibernate-mapping>